{
	// 清单文件的版本，这个必须写，而且必须是2
    "manifest_version": 2,
	// 插件的名称
    "name": "零碎知识点",
	// 插件的版本
    "version": "1.0",
	// 插件描述(显示在360的插件列表页面)
	"description": "__MSG_pluginDesc__", 
	// 图标，一般偷懒全部用一个尺寸的也没问题
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
	 "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "零碎知识",
        "default_popup": "popup.html"
    },
		// 需要直接注入页面的JS
	"content_scripts": 
	[
		{
			//"matches": ["http://*/*", "https://*/*"],
			// "<all_urls>" 表示匹配所有地址
			"matches": ["<all_urls>"],
			// 多个JS按顺序注入
			"js": ["js/jquery.js", "js/content-script.js"],
			// JS的注入可以随便一点，但是CSS的注意就要千万小心了，因为一不小心就可能影响全局样式
			"css": ["css/custom.css"],
			// 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
			"run_at": "document_start"
		},
		// 这里仅仅是为了演示content-script可以配置多个规则
		{
			"matches": ["*://*/*.png", "*://*/*.jpg", "*://*/*.gif", "*://*/*.bmp"],
			"js": ["js/show-image-content-size.js"]
		}
	],

	"background": {
		// 2种指定方式，如果指定JS，那么会自动生成一个背景页
		"page": "background.html"
		// "scripts": ["js/background.js"]
	},
    "permissions": [
		"contextMenus", // 右键菜单
		"tabs", // 标签
		"notifications", // 通知
		"webRequest", // web请求
		"webRequestBlocking", // 阻塞式web请求
		"storage", // 插件本地存储
		"http://*/*", // 跨域的url权限，如ajax,如 background.js可以通过executeScript(chrome.tabs.executeScript)或者insertCSS访问的网站(等价于content_scripts注入方式，但是content_scripts是javascript 和css注入到每一个匹配的网页里面，而executeScript或者insertCSS是通过程序来控制代码注入，如点击browser action图标后才注入脚本)
		"https://*/*" // 跨域的url权限，如ajax,如 background.js可以通过executeScript(chrome.tabs.executeScript)或者insertCSS访问的网站

    ],
	// 普通页面能够直接访问的插件资源列表，如果不设置是无法直接访问的
	"web_accessible_resources": ["js/inject.js"],
	
	// 插件主页，这个很重要，不要浪费了这个免费广告位
	"homepage_url": "https://www.baidu.com",
	// 覆盖浏览器默认页面
	"chrome_url_overrides":
	{
		// 覆盖浏览器默认的新标签页(360急速无效果，chrome正常)
		"newtab": "newtab.html" 
	},
	// Chrome40以前的插件配置页写法
	"options_page": "options.html",
	// Chrome40以后的插件配置页写法，如果2个都写，新版Chrome只认后面这一个
	"options_ui": 
	{
		"page": "options.html",
		// 添加一些默认的样式，推荐使用
		"chrome_style": true
	},
	// 向地址栏注册一个关键字以提供搜索建议，只能设置一个关键字 (地址栏输入go 并按TAB键)
	"omnibox": { "keyword" : "go" }, 
	// 默认语言
	"default_locale": "zh_CN",
	// devtools页面入口，注意只能指向一个HTML文件，不能是JS文件
	"devtools_page": "devtools.html"
	
}
{
    "manifest_version": 2,
    "name": "通信",
    "version": "1.0",
    "description": "通信",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "browser_action": {
      "default_icon": "images/icon.png",
      "default_title": "通信"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["js/jquery.js","js/content.js"], // 因为js的相互隔离，所以想要使用jquery必须自己引入。
            "css": ["css/custom.css"],
            "run_at": "document_start"
        }
    ],    
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"permissions": [ "http://*/*", "https://*/*"] 
}
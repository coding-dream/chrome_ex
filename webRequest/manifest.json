{
	// 清单文件的版本，这个必须写，而且必须是2
	"manifest_version": 2,
	"name": "WebRequest测试",
	"version": "1.0.0",
	"icons":
	{
		"16": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},
	"background":
	{
		"page": "background.html"
	},
	"browser_action": 
	{
		"default_icon": "images/icon.png",
		"default_title": "WebRequest测试",
		"default_popup": "popup.html"
	},
	"permissions":
	[
		"webRequest", // web请求
		"webRequestBlocking", // 阻塞式web请求
		"http://*/*",
		"https://*/*"
	]
}